{
  "mcp-server": {
    "command": "/home/clara-sorrenti/Documents/MF_MCP/MCP/target/release/mcp-warp-tasks-server",
    "args": [
      "--config",
      "/home/clara-sorrenti/Documents/MF_MCP/MCP/config/server.toml",
      "--log-level",
      "info"
    ],
    "env": {
      "TRELLO_KEY": "{{TRELLO_KEY}}",
      "TRELLO_TOKEN": "{{TRELLO_TOKEN}}",
      "TRELLO_BOARD_ID": "{{TRELLO_BOARD_ID}}",
      "REDIS_URL": "{{REDIS_URL}}",
      "RUST_LOG": "{{RUST_LOG_LEVEL}}",
      "HEARTBEAT_TIMEOUT": "{{HEARTBEAT_TIMEOUT}}",
      "MCP_ENV": "development",
      "MCP_VERSION": "0.1.0",
      "MCP_HOST": "127.0.0.1",
      "MCP_PORT": "8080"
    },
    "working_directory": "/home/clara-sorrenti/Documents/MF_MCP/MCP",
    "start_on_launch": true,
    "restart_policy": {
      "type": "on-failure",
      "max_attempts": 3,
      "interval": 10
    }
  },
  "warp": {
    "integration": {
      "name": "mcp-warp-tasks",
      "version": "0.1.0",
      "description": "MCP Warp Tasks Server Integration"
    },
    "tasks": {
      "auto_sync": {
        "enabled": true,
        "interval": 600,
        "retry": {
          "attempts": 3,
          "delay": 30
        }
      },
      "health_check": {
        "enabled": true,
        "interval": 30,
        "endpoints": [
          {
            "url": "http://localhost:8080/health",
            "method": "GET",
            "timeout": 5
          }
        ]
      },
      "backup": {
        "enabled": true,
        "interval": 86400,
        "path": "/home/clara-sorrenti/Documents/MF_MCP/backups",
        "retain_days": 7
      }
    },
    "logging": {
      "level": "info",
      "file": "/home/clara-sorrenti/Documents/MF_MCP/logs/mcp-warp.log",
      "format": "json",
      "rotation": {
        "max_size": "100MB",
        "max_files": 5,
        "compress": true
      }
    },
    "metrics": {
      "enabled": true,
      "endpoint": "/metrics",
      "port": 9090
    },
    "security": {
      "tls_enabled": false,
      "auth_required": true,
      "allowed_origins": ["http://localhost:*"],
      "rate_limit": {
        "requests_per_second": 10,
        "burst": 20
      }
    }
  }
}
